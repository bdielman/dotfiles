# MacVim
alias e="mvim -v"

# Directory Stuff
alias ..="cd .."
alias cdd="cd -"
alias ...="cd ../.."
alias ls="ls -lG"
alias ll="ls -alh"
alias lsa="ls -lGa"

# Concatenate and print content of files (add line numbers)
alias catn="cat -n"

# Copy my public key to my clipboard
alias pubkey="more ~/.ssh/id_rsa.pub | pbcopy | echo '=> Public key copied to pasteboard.'"

# Flush DNS cache
alias flushdns="dscacheutil -flushcache"

# MySQL
alias sqlstart="mysql.server start"
alias sqlstop="mysql.server stop"

# Rails
alias ss="script/server"
alias sc="bundle exec rails c"
alias cons="script/console"
alias db="script/dbconsole"
alias spr="script/passenger_restarter"
alias bails="bundle exec rails s"

# Shortcuts
alias dt="cd ~/desktop"
alias www="cd ~/Sites"
alias cc="cd ~/Sites/CivicCommons"
alias bd="cd ~/Sites/bd-site"
alias dip="cd ~/Sites/D-I-Public-Site"
alias ec="cd ~/Sites/ecommerce-templates"
alias py="cd ~/Sites/puma-yoga"

# Hub
eval "`hub alias -s bash`"

# Serve static
alias sstatic="python -m SimpleHTTPServer"
