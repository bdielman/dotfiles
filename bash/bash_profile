source ~/.bashrc

# Bash completion scripts
source /usr/local/etc/bash_completion.d/brew
source /usr/local/etc/bash_completion.d/hub.bash_completion.sh
source /usr/local/etc/bash_completion.d/git-completion.bash

# export PATH="/usr/local/share/npm/bin:/usr/local/bin:/usr/local/sbin:$PATH"

# Older version of Elasticsearch
export PATH="/usr/local/opt/elasticsearch@5.6/bin:$PATH"

export GPG_TTY=$(tty)

# Add rbenv to PATH
if which rbenv > /dev/null; then eval "$(rbenv init -)"; fi

# Add nodenv to PATH
if which nodenv > /dev/null; then eval "$(nodenv init -)"; fi

# Include Yarn
export PATH="$PATH:`yarn global bin`"

# https://openradar.appspot.com/27348363
# This is a fix for macOS Sierra
# -A flag adds all identities stored in keychain
ssh-add -A &> /dev/null
