[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  df = difftool
  mt = mergetool
  ds = diff --stat
  dh = !git diff HEAD HEAD~1
  lg = log -p
  adda = add -A
  addp = add -p
  amend = commit --amend
  hist = log --pretty=nice --all --date-order --graph
  plog = log --pretty=nice --date-order
  type = cat-file -t
  dump = cat-file -p
  trim = !git remote prune origin && git gc
  who = shortlog -sn --
  undo = reset --soft HEAD^
[core]
  excludesfile = /Users/braddielman/.gitignore_global
  editor = vim
  quotepath = false
  autocrlf = input
[pull]
  rebase = false
[color]
  ui = true
[pretty]
  nice = "%C(yellow)%h%C(reset) %C(white)%s%C(cyan)%d%C(reset) -- %an; %ar"
[web]
  browser = open
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[difftool "vimdiff"]
  cmd = vim -f -d \"$LOCAL\" \"$REMOTE\"
[merge]
  tool = vimdiff
[mergetool]
  prompt = false
[mergetool "vimdiff"]
  cmd = vim -f -c \"Gvdiff\" \"$MERGED\"
[include]
  path = ~/.git_secrets/secrets
